<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="./css/nav.css">
    <link rel="stylesheet" href="./css/body-cards.css">
</head>
<body>
    <div class="nav-bar">
        <nav>
            <ol>
                <li>Home</li>
                <li>Blogs</li>
                <li>Chats</li>
                <li>About</li>
                <li>
                    <form action="/logout" method="post" class="logout">
                        <button type="submit" class="btn btn-primary">Logout</button>
                    </form>
                </li>
            </ol>
        </nav>
    </div>
    <div class="body-cards">
        <% data.forEach(s => { %>
            <div class="card">
                <h2><%= s.title %></h2>
                <p><%= s.description %></p>
                <h4><%= s.brand %></h4>
                <h4><%= s.category %></h4>
                <h4>$<%= s.price %></h4>
                <h4>Discount: <%= s.discountPercentage %>%</h4>
                <p>Rating: <%= s.rating %> / 5</p>
                <p>Stock: <%= s.stock %> units</p>
            </div>
        <% }) %>
    </div>    
    </div>
</body>
</html>